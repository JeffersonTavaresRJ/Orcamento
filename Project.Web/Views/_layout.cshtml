<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!--Não guardar cache-->
    <meta http-equiv="cache-control" content="max-age=0" />
    <meta http-equiv="cache-control" content="no-cache" />
    <meta http-equiv="expires" content="0" />
    <meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
    <meta http-equiv="pragma" content="no-cache" />

    <title>@ViewBag.Title - Conta Fácil</title>

    <link href="~/css/bootstrap.min.css" rel="stylesheet" />

    <!--style para uso de paginação via PagedList-->
    <link href="~/css/PagedList.css" rel="stylesheet" />


    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/css/jquery.dataTables.min.css" rel="stylesheet" />

    @*<link href="~/css/Site.css" rel="stylesheet" />*@

    <script src="~/js/jquery-3.0.0.min.js"></script>
    <!--js para realizar validação no AjaxBeginForm-->
    <script src="~/js/jquery.validate.min.js"></script>
    <script src="~/js/jquery.validate.unobtrusive.js"></script>

    <!--js para realizar execução do evento no javascritp OnSuccess no AjaxBeginForm e capturar a mensagem no js-->
    <script src="~/js/jquery.unobtrusive-ajax.min.js"></script>


    <!--js do Bootstrap para corrigir o erro no dropdown-->
    <script src="~/js/bootstrap.bundle.min.js"></script>

    <!--js do DataTable JQuery para paginação-->
    <script src="~/Scripts/jquery.dataTables.min.js"></script>


    <script src="~/js/site.js"></script>


    <style type="text/css">

        .progresso {
            display: none;
            position: fixed;
            padding-top: 50%;
            padding-left: 50%;
            vertical-align: middle;
            text-align: center;
            font-size: 16px;
            background-color: white;
            height: 100%;
            width: 100%;
            filter: alpha(opacity=70);
            opacity: 0.7;
        }

        #imgCarregando {
            width: 100px;
            height: 100px;
            display: block;
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            z-index: 2;
        }
    </style>
</head>
<body>
    @Html.Partial("~/Views/_navbar.cshtml")

    <img id="imgCarregando" src="~/assets/gifs/loading.gif" style="display:block" />

    <div id="divBody" class="container mt-2" style="z-index:1; display:none">
        @RenderBody()
    </div>



    <div id="modalMensagem" class="modal fade" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">Sr. Usuário</h4>
                    <span style="font-size:xx-large"><i class="fa fa-info-circle"></i></span>
                </div>
                <div class="modal-body">
                    <p><span id="modalMensagemId"></span></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-dark btn-sm" data-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>

    <div id="modalConfirmMensagem" class="modal fade" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">Sr. Usuário</h4>
                    <span style="font-size:xx-large"><i class="fa fa-info-circle"></i></span>
                </div>
                <div class="modal-body">
                    <p><span id="spanConfirmMensagem"></span></p>
                </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" class="btn btn-outline-dark active" id="btnConfirmSim">Sim</button>
                    <button type="button" data-dismiss="modal" class="btn btn-outline-dark">Não</button>
                </div>
            </div>
        </div>
    </div>

    @*<div id="divCarregando" class="progresso">
            <br />
            <img src="~/assets/gifs/ajax-loader.gif" />
            <br />
            Carregando...
        </div>*@

</body>
</html>
