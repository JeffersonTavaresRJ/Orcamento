<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - Conta Fácil</title>

    <link href="~/css/bootstrap.min.css" rel="stylesheet" />

    <script src="~/js/jquery-3.0.0.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>

</head>
    <body>
        <nav class="navbar navbar-dark bg-dark justify-content-between" role="navigation" @*style="background-color:gray"*@>
            <a class="navbar-brand" href="#">
                <strong>Conta Fácil</strong>
            </a>

            @if (TempData["Usuario"] != null)
            {
                <div class="navbar-brand" style="font-size:small">
                    @TempData["Usuario"]
                </div>               
            }
        </nav>
        <br />
        <div class="container">
            @RenderBody()
        </div>
    </body>
</html>
