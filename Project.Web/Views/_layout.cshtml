<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - Conta Fácil</title>

    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/js/jquery-3.0.0.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>

</head>
    <body>
        <nav class="navbar navbar-dark bg-dark navbar-expand-lg mb-4" @*style="background-color:gray"*@>
            <div class="container">
                <a class="navbar-brand" href="#">
                    <strong>Conta Fácil</strong>
                </a>

                @if (TempData["Usuario"] != null)
                {
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSite">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSite">
                        <div class="dropdown ml-auto">
                            <button class="btn btn-dark bg-dark dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @TempData["Usuario"]
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="#">
                                    Sair  
                                </a>
                            </div>
                        </div>
                    </div>
                }


                @*@if (TempData["Usuario"] != null)
            {
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ml-auto">
