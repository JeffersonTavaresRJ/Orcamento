@model List<Project.Entity.Menu>

@{
    ViewBag.Title = "Menu";
    Layout = "~/Views/_layout.cshtml";
}

<script type="text/javascript">

    $(document).ready(function () {

        $("#btnNovo").show();
        $("#btnPesquisar").show();
        PopulaPerfil();

        $("#btnAddPerfil").click(function () {
            $("#modal").load("@Url.Action("Inclusao", "Perfil")", function () {
                $("#modal").modal({ backdrop:"static"});
            })
        })

    });

</script>

<h5>Transações</h5>

<hr />

<div class="row">
    <div class="col-3">
        <label>Perfil:</label>
    </div>
</div>
<div class="row">
    <div class="col-3">
        <select id="cmbPerfil" class="form-control"></select>
    </div>
    <div class="col-2 pl-0">
        <button id="btnAddPerfil" type="button" class="btn btn-dark btn-lg" style="">
            <i class="fa fa-plus-square"></i>
        </button>
    </div>
</div>

<div class="row mt-3">


</div>

<div class="modal" id="modal" role="dialog">
</div>

